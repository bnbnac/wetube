extends base.pug

block content 
    if errorMessage 
        span=errorMessage
    img(src=loggedInUser.avatarUrl, width='100', heigh='100')
    form(method="POST", enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar", accept="image/*")
        input(placeholder="Username", name="username", type="text", required, minlength=4, maxlength=50, value=loggedInUser.username)
        input(placeholder="Name", name="name", type="text", required, maxlength=50, value=loggedInUser.name)
        input(placeholder="Location", name="location", type="text", maxlength=50, value=loggedInUser.location)
        input(type="submit", value="Update profile")
        hr
        if !loggedInUser.socialOnly
            a(href="change-password") Change Password &rarr;